{
    "name": "sam0hack/FileSizeConverter",
    "type": "library",
    "description": ":A helper tool for converting laravel getSize() into human readable format",
    "keywords": [
        "sam0hack",
        "FileSizeConverter"
    ],
    "homepage": "https://github.com/sam0hack/laravel-FileSizeConverter",
    "license": "GNU General Public License v3.0",
    "authors": [
        {
            "name": ":sam0hack",
            "email": ":sam.nyx@live.com",
            "homepage": ":https://github.com/sam0hack/laravel-FileSizeConverter",
            "role": "Developer"
        }
    ],
    "require": {
        "illuminate/support": "~5.1",
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "sam0hack\\FileSizeConverter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "sam0hack\\FileSizeConverter\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.6.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}

