{
    "name": "sam0hack/file-size-converter",
    "type": "library",
    "description": "A helper tool for converting laravel getSize() into human readable format. ",
    "keywords": ["getSize", "files", "converter"],
    "license": "GNU General Public License v3.0",
    "authors": [
        {
          "name": "sam0hack",
          "email": "sam.nyx@live.com"
        }
    ],
    "require": {
        "php": "^5.3.3|^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "squizlabs/php_codesniffer": "~1.5",
        "ext-intl": "*"
    },
    "autoload": {
      "psr-4": {
        "file-size-converter\\": "src/"
      }
    },
    "autoload-dev": {
      "psr-4": {
        "Tests\\": "tests/"
      }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.6.x-dev"
        }
    }
}
